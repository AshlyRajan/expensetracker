@model List<expensetracker.Models.Registration>
@{
    ViewData["Title"] = "ManageEmployees";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1>ManageEmployees</h1>


<div class="container mt-5">
    
    <a asp-action="CreateEmployee" class="btn btn-primary mb-3">Add New Employee</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.Role</td>
                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteEmployee" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


