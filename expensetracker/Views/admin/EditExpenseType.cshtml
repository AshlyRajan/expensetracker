@model expensetracker.Models.ExpenseTypes
@{
    ViewData["Title"] = "EditExpenseType";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1>EditExpenseType</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Edit Expense Type</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="EditExpenseType">
                        <input type="hidden" asp-for="ExpenseTypeID" />
                        <div class="form-group mb-3">
                            <label asp-for="ExpenseType" class="form-label">Expense Type</label>
                            <input asp-for="ExpenseType" class="form-control" placeholder="Enter Expense Type Name" />
                            <span asp-validation-for="ExpenseType" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary w-45">Save</button>
                            <a asp-action="ListExpenseTypes" class="btn btn-secondary w-45">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

