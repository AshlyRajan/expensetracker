@model expensetracker.Models.Registration
@{
    ViewData["Title"] = "DeleteEmployee";
    Layout = "~/Views/Shared/admin.cshtml";
}


<h2>Delete Employee</h2>

<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <div>
        <strong>ID:</strong> @Model.Id
    </div>
    <div>
        <strong>Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Email:</strong> @Model.Email
    </div>
    <div>
        <strong>Role:</strong> @Model.Role
    </div>
</div>

<form asp-action="ConfirmDeleteEmployee" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageEmployees" class="btn btn-secondary">Cancel</a>
</form>

