@model expensetracker.Models.Registration

@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4" style="font-family: 'Arial', sans-serif; color: #333;">Create Your Account</h1>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f5f7fa;">
    <div class="card shadow-lg p-5" style="max-width: 500px; width: 100%; border-radius: 15px; background: #fff;">
        <form asp-action="Register" method="post">
            <!-- Full Name -->
            <div class="form-group mb-3">
                <label for="Name" class="font-weight-bold">Full name</label>
                <input type="text" class="form-control" id="Name" name="Name" required placeholder="Enter your full name" />
            </div>

            <!-- Age -->
            <div class="form-group mb-3">
                <label for="Age" class="font-weight-bold">Age</label>
                <input type="number" class="form-control" id="Age" name="Age" required placeholder="Enter your age" />
            </div>

            <!-- Address -->
            <div class="form-group mb-3">
                <label for="Address" class="font-weight-bold">Address</label>
                <input type="text" class="form-control" id="Address" name="Address" required placeholder="Enter your address" />
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label for="Email" class="font-weight-bold">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter your email" />
            </div>

            <!-- Username -->
            <div class="form-group mb-3">
                <label for="Username" class="font-weight-bold">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" required placeholder="Choose a username" />
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label for="Password" class="font-weight-bold">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="Create a password" />
            </div>

            <!-- Confirm Password -->
            <div class="form-group mb-3">
                <label for="ConfirmPassword" class="font-weight-bold">Confirm Password</label>
                <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required placeholder="Confirm your password" />
            </div>

            <!-- Hidden Role field (set default as "User") -->
            <div class="form-group mb-3" style="display:none;">
                <input type="text" id="Role" name="Role" value="User" />
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-block py-2" style="font-size: 16px;">Sign Up</button>
        </form>

        <!-- Success or error messages -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["Message"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["Error"]
            </div>
        }
    </div>
</div>

<!-- Optional background gradient -->
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f5f7fa;
    }

    .card {
        border-radius: 15px; /* Rounded corners for the card */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    .form-control {
        border-radius: 8px; /* Rounded input fields */
        padding: 12px; /* More padding */
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #1e90ff; /* Focus effect */
            box-shadow: 0 0 5px rgba(30, 144, 255, 0.5);
        }

    .btn-primary {
        background-color: #1e90ff;
        border-color: #1e90ff;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0a74d6; /* Darker shade on hover */
            border-color: #0a74d6;
        }

    .alert {
        border-radius: 8px;
    }

    .container {
        padding: 20px;
        margin-top: -40px; /* Move the form up by 40px */
    }

    h1 {
        color: #333;
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        font-size: 14px;
    }
</style>
