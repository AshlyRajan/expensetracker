@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a standard layout
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f4f7fb;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px; background: #fff;">
        <h2 class="text-center mb-4" style="color: #2c3e50;">Sign in</h2>

        <!-- Display Error or Success Messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <!-- Login Form -->
        <form method="post">
            <div class="form-group mb-3">
                <label for="Username" class="font-weight-bold">Username</label>
                <input type="text" class="form-control" id="Username" name="username" required placeholder="Enter your username" />
            </div>

            <div class="form-group mb-3">
                <label for="Password" class="font-weight-bold">Password</label>
                <input type="password" class="form-control" id="Password" name="password" required placeholder="Enter your password" />
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary btn-block py-2">Login</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <p>Don't have an account? <a href="/Account/Register" class="text-primary">Sign up here</a></p>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f7fb;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
</style>
