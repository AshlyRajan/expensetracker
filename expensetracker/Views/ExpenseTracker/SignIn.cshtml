@model expensetracker.Models.property

@{
    ViewData["Title"] = "Sign In";
}

<h2>Sign In</h2>

<form asp-action="SignIn" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" required />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>
</form>

@if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
{
    <div class="text-danger">Please correct the errors and try again.</div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Message"]
    </div>
}
