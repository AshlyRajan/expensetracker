@model expensetracker.Models.signup
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/userlayout.cshtml";
}

<h1 class="text-center">Profile</h1>

<div class="profile-container">
    <div class="profile-card">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>State:</strong> @Model.State</p>
        <p><strong>District:</strong> @Model.District</p>
        <p><strong>Gender:</strong> @Model.Gender</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Username:</strong> @Model.Username</p>
        <p><strong>Role:</strong> @Model.Role</p>
    </div>

    <div class="text-center mt-3">
        <!-- Button to redirect to EditSignup page -->
        <a asp-controller="ExpenseTracker" asp-action="Editsignup" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    </div>
</div>

<style>
    .text-center {
        text-align: center;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .profile-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 80vh;
        background-color: #f9f9f9;
    }

    .profile-card {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 50%;
        font-family: Arial, sans-serif;
    }

        .profile-card p {
            font-size: 16px;
            margin: 10px 0;
            color: #333;
        }

            .profile-card p strong {
                color: #555;
            }

    .btn {
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .mt-3 {
        margin-top: 20px;
    }
</style>
