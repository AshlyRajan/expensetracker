@model expensetracker.Models.Expenz

@{
    ViewData["Title"] = "Insert Expense";
    Layout = "~/Views/Shared/userlayout.cshtml";
}

<div class="container">
    <h2 class="text-center">Create Expense</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <<form asp-action="Create" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width: 600px;">
        <div class="form-group">
            <label for="ExpenseTypeID">Expense Type:</label>
            <select asp-for="ExpenseTypeID" class="form-control" asp-items="ViewBag.ExpenseTypes">
                <option value="">-- Select Expense Type --</option>
            </select>
            <span asp-validation-for="ExpenseTypeID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Amount">Amount:</label>
            <input type="number" asp-for="Amount" class="form-control" placeholder="Enter Amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="DateofExpense">Date of Expense:</label>
            <input type="date" asp-for="DateofExpense" class="form-control" />
            <span asp-validation-for="DateofExpense" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Description:</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CreatedBy">Created By:</label>
            <input type="text" asp-for="CreatedBy" class="form-control" placeholder="Enter Creator Name" />
            <span asp-validation-for="CreatedBy" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CreatedAt">Created At:</label>
            <input type="date" asp-for="CreatedAt" class="form-control" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="BillCopy">Upload Bill:</label>
            <input type="file" asp-for="BillCopy" class="form-control" data-val="false" />
            <span asp-validation-for="BillCopy" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label for="Status">Status:</label>
            <input type="text" asp-for="Status" class="form-control" placeholder="Pending" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit</button>
        <a asp-action="Create" class="btn btn-secondary w-100 mt-2">Cancel</a>
    </form>
</div>
