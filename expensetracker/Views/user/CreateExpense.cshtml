@model expensetracker.Models.Expense
@{
    ViewData["Title"] = "CreateExpense";
    Layout = "~/Views/Shared/userlayout.cshtml";
}

<h1>CreateExpense</h1>

<form asp-action="CreateExpense" method="post">
    <div class="form-group">
        <label>Expense Type</label>
        <input type="text" asp-for="ExpenseType" class="form-control" />
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input type="number" asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date of Expense</label>
        <input type="date" asp-for="DateOfExpense" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Created By</label>
        <input type="text" asp-for="CreatedBy" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
