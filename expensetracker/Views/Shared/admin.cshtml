<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/expensetracker.styles.css" asp-append-version="true" />
    <style>
        footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 1rem 0;
            font-weight: bold;
        }

        .home-page-banner {
            background: linear-gradient(90deg, #4caf50, #81c784);
            color: white;
            text-align: center;
            padding: 50px 20px;
            border-radius: 10px;
        }

        .home-page-content {
            text-align: center;
            margin-top: 30px;
        }

        .btn-primary {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @*   Logo  *@
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logoex.jpg" width="50" height="50" class="me-2" />
                    <strong>Expense Tracker</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </li> *@
                        @* <a href="/ExpenseTracker/SignIn">Sign In</a> *@

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="admin" asp-action="adminhome">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="admin" asp-action="Logout">Logout</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   






    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody() <!-- This ensures child views render their content here -->
        </main>

    </div>
    <footer class="border-top footer">
        <div class="container">
            &copy; 2024 - Expense Tracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

